class Main{
public static int palindrome(String a){
    int l = 0;
    int r = a.length()-1;
    while (l<=r){
        if (a.charAt(l)!= a.charAt(r)){
            return 0;
        }
        l++;
        r--;
    }
    return 1;
}
public static void main (String[] args){
    String a = "abcba";
    System.out.print(palindrome(a));
}
}
