class Main {
    public boolean cansplitarr (int [] a, int n){
        int leftsum=0;
        for(int i=0; i<n; i++){
            leftsum+= a[i];
        }
        int rightsum=0;
        for(int i=n-1; i>=0;i--){
            rightsum+=a[i];
            leftsum-=a[i];
            if (rightsum==leftsum){
                return true;
            }
        }
        return false;
    }
    public static void main (String[] args){
        int a[] = {1,5,2,4};
       int  n = a.length;
       Main obj = new Main();
       boolean cansplit = obj.cansplitarr(a,n);
       System.out.print(cansplit);
    }
}
